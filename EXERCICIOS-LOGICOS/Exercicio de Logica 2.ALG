Algoritmo "Sucessor"
    // Declaração de variáveis
    Var
        valor, sucessor: Inteiro

    // Início do algoritmo
    Inicio
        // Leitura do valor
        Escreva("Digite um número: ")
        Leia(valor)

        // Calcular o sucessor
        sucessor <- valor + 1

        // Exibir o sucessor
        Escreva("O sucessor de ", valor, " é ", sucessor)
Fimalgoritmo
